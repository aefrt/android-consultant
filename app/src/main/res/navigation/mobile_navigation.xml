<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mainscreen.ui.home.HomeFragment"
        android:label="Новости"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.mainscreen.ui.dashboard.DashboardFragment"
        android:label="Справочник"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.mainscreen.ui.notifications.NotificationsFragment"
        android:label="Инструкции"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_fourth"
        android:name="com.example.mainscreen.ui.fourth.BlankFragment"
        android:label="Поддержка"
        tools:layout="@layout/fragment_blank" />
</navigation>