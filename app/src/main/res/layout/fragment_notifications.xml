<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="ВЫБЕРИТЕ СИТУАЦИЮ"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_police"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#5CA2EF"
                android:drawableTop="@drawable/ic_police"
                android:paddingTop="10dp"
                android:text="Остановил сотрудник ГИББД" />

            <Button
                android:id="@+id/button11"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#5CA2EF"
                android:drawableTop="@drawable/ic_avaria"
                android:paddingTop="10dp"
                android:text="Попал в ДТП" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#5CA2EF"
                android:drawableTop="@drawable/ic_velo_arenda"
                android:paddingTop="10dp"
                android:text="Проблемы с арендой велосипеда" />

            <Button
                android:id="@+id/button13"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/roundstyle"
                android:backgroundTint="#5CA2EF"
                android:drawableTop="@drawable/ic_arendatory"
                android:paddingTop="25dp"
                android:text="Проблемы с арендаторами велосипеда" />
        </LinearLayout>

        <Button
            android:id="@+id/sos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#97C5889B"
            android:drawableLeft="@drawable/phone_in_talk"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Экстренные вызовы"
            android:textColor="@color/fui_bgEmail"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>