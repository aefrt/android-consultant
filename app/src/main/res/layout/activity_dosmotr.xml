<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.OsmotrActivity">

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:text="Как вести себя при досмотре? "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="264dp"
        android:layout_height="289dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:text="Основания для досмотра:  - подозрения, что в машине находятся преступники или незаконно перевозят оружие.  При досмотре всем нужно выйти из машины, а инспектор имеет право трогать вещи. Но при этом обязательно нужны понятые или видеозапись.  Если инспектор не позвал понятых, не ведет запись, но при этом проводит досмотр, можете ему не мешать, но потом запишите в протоколе, что понятых не было. Результаты досмотра будут недействительными — их не признают доказательствами."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView61" />
</androidx.constraintlayout.widget.ConstraintLayout>